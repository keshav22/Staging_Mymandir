<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#969393"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/proimg"
            android:background="#000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/proimg"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:id="@+id/userdes"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/proimg"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:id="@+id/descrip"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/descrip"
            android:layout_marginTop="10dp"
            android:id="@+id/post"
            android:background="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post"
            android:text="---------------------------------------------------------"
            android:gravity="center"
            android:id="@+id/line"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/line"
            android:id="@+id/img"
            android:layout_centerHorizontal="true">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/share1"
                android:src="@mipmap/share"
                />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/like1"
                android:src="@mipmap/like"
                />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/comment1"
                android:src="@mipmap/talk"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/reaction1"
                android:src="@mipmap/chemical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/img"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/share2"
                />
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/like2"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/comment2"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/reaction2"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>